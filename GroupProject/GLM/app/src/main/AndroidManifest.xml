<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.gatech.seclass.glm">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.GroceryListActivity"
            android:label="My Grocery Lists">
        </activity>
        <activity
            android:name=".activity.ItemActivity"
            android:label="Items">
        </activity>
        <activity
            android:name=".activity.ItemTypeActivity"
            android:label="Item Types">
        </activity>
        <activity
            android:name=".activity.ListItemActivity"
            android:label="List Items">
        </activity>
    </application>

</manifest>